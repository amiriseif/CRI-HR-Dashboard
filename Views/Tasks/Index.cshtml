@model IEnumerable<HRDashboard.Models.TasksViewModel>

@{
    ViewData["Title"] = "Tasks";
}

<link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" />
<link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.5.0/css/all.min.css" />

<style>
    :root {
        --primary: #0d1b4c;
        --primary-dark: #081336;
        --accent: #00aaff;
        --accent-glow: #00ddff;
        --text-light: #d0e0ff;
        --card-bg: rgba(18, 26, 66, 0.55);
        --border-glow: rgba(0, 170, 255, 0.3);
        --overlay-bg: rgba(8, 19, 54, 0.92);
    }

    body {
        background: linear-gradient(135deg, var(--primary-dark) 0%, var(--primary) 50%, #1a2a6c 100%);
        color: var(--text-light);
        min-height: 100vh;
        font-family: 'Segoe UI', system-ui, sans-serif;
        margin: 0;
    }

    .dashboard-wrapper {
        padding: 2rem 1.5rem;
        max-width: 1400px;
        margin: 0 auto;
        padding-top: 90px; /* ← adjust according to your navbar height */
    }

    .fab {
        position: fixed;
        bottom: 32px;
        right: 32px;
        width: 64px;
        height: 64px;
        border-radius: 50%;
        background: linear-gradient(135deg, var(--accent), #0095e6);
        color: white;
        font-size: 1.6rem;
        display: flex;
        align-items: center;
        justify-content: center;
        box-shadow: 0 8px 25px rgba(0, 170, 255, 0.45);
        border: none;
        transition: all 0.3s ease;
        z-index: 1050;
        cursor: pointer;
    }

    .fab:hover {
        transform: translateY(-4px) scale(1.08);
        box-shadow: 0 16px 40px rgba(0, 170, 255, 0.55);
    }

    .task-card {
        background: var(--card-bg);
        border: 1px solid var(--border-glow);
        border-radius: 1rem;
        backdrop-filter: blur(12px);
        box-shadow: 0 12px 35px rgba(0, 0, 0, 0.45);
        transition: all 0.35s ease;
        margin-bottom: 1.5rem;
    }

    .task-card:hover {
        transform: translateY(-6px);
        box-shadow: 0 20px 50px rgba(0, 170, 255, 0.22);
        border-color: rgba(0, 170, 255, 0.5);
    }

    .task-header {
        padding: 1.25rem 1.5rem;
        border-bottom: 1px solid rgba(0, 170, 255, 0.18);
        display: flex;
        justify-content: space-between;
        align-items: center;
        background: linear-gradient(90deg, rgba(0,170,255,0.08), transparent);
    }

    .task-title {
        font-size: 1.15rem;
        font-weight: 500;
        margin: 0;
    }

    .status-badge {
        font-size: 0.8rem;
        padding: 0.4rem 1rem;
        border-radius: 2rem;
        font-weight: 600;
        cursor: pointer;
        transition: all 0.25s;
    }

    .status-badge:hover {
        transform: scale(1.08);
        box-shadow: 0 0 15px rgba(255,255,255,0.15);
    }

    .status-todo    { background: #ff9500cc; color: white; }
    .status-inprogress { background: #5856d6cc; color: white; }
    .status-done    { background: #34c759cc; color: white; }
    .status-blocked { background: #ff3b30cc; color: white; }

    .task-body {
        padding: 1.5rem;
    }

    .task-meta {
        display: flex;
        flex-wrap: wrap;
        gap: 1.5rem;
        margin-bottom: 1rem;
        font-size: 0.92rem;
        color: rgba(208, 224, 255, 0.85);
    }

    .task-meta i {
        color: var(--accent);
        margin-right: 0.5rem;
    }

    /* Status changer overlay */
    #statusOverlay {
        position: fixed;
        inset: 0;
        background: var(--overlay-bg);
        backdrop-filter: blur(8px);
        display: none;
        align-items: center;
        justify-content: center;
        z-index: 2000;
    }

    .status-changer {
        background: rgba(18, 26, 66, 0.75);
        border: 1px solid var(--border-glow);
        border-radius: 1.5rem;
        padding: 3rem 4rem;
        text-align: center;
        box-shadow: 0 20px 60px rgba(0, 0, 0, 0.6);
        min-width: 380px;
        max-width: 90%;
        backdrop-filter: blur(10px);
    }

    .status-display {
        font-size: 3.2rem;
        font-weight: 700;
        margin: 1.5rem 0 2.5rem;
        text-shadow: 0 0 20px rgba(0, 170, 255, 0.5);
        min-height: 3.8rem;
    }

    .arrow-btn {
        width: 70px;
        height: 70px;
        border-radius: 50%;
        background: rgba(0, 170, 255, 0.18);
        border: 1px solid var(--accent);
        color: var(--accent);
        font-size: 1.8rem;
        display: inline-flex;
        align-items: center;
        justify-content: center;
        cursor: pointer;
        transition: all 0.3s;
        margin: 0 1.5rem;
    }

    .arrow-btn:hover {
        background: var(--accent);
        color: white;
        transform: scale(1.12);
        box-shadow: 0 0 25px rgba(0, 170, 255, 0.5);
    }

    .action-btn {
        min-width: 140px;
        margin: 0 1rem;
        font-weight: 600;
        padding: 0.9rem 1.8rem;
        border-radius: 3rem;
        transition: all 0.3s;
    }

    .btn-update {
        background: linear-gradient(90deg, #00ddff, #00aaff);
        border: none;
        color: black;
    }

    .btn-update:hover {
        transform: translateY(-2px);
        box-shadow: 0 10px 30px rgba(0, 221, 255, 0.5);
    }

    .btn-cancel {
        background: rgba(255,255,255,0.12);
        border: 1px solid rgba(255,255,255,0.3);
        color: white;
    }

    .btn-cancel:hover {
        background: rgba(255,60,60,0.25);
        border-color: #ff3b30;
    }

    .create-section {
        background: var(--card-bg);
        border: 1px solid var(--border-glow);
        border-radius: 1rem;
        backdrop-filter: blur(12px);
        padding: 1.75rem;
        margin-bottom: 2.5rem;
        box-shadow: 0 12px 40px rgba(0, 0, 0, 0.4);
    }

    .form-label { color: var(--text-light); font-weight: 500; }

    .form-control, .form-select {
        background-color: rgba(255,255,255,0.06);
        border: 1px solid rgba(0, 170, 255, 0.35);
        color: white;
        transition: all 0.3s;
    }

    .form-control:focus, .form-select:focus {
        background-color: rgba(255,255,255,0.11);
        border-color: var(--accent-glow);
        box-shadow: 0 0 0 0.3rem rgba(0, 170, 255, 0.22);
        color: white;
    }

    .form-control::placeholder {
        color: rgba(255,255,255,0.4);
    }

    .btn-futuristic {
        background: linear-gradient(90deg, var(--accent), #0095e6);
        border: none;
        color: white;
        font-weight: 600;
        padding: 0.8rem 1.8rem;
        box-shadow: 0 6px 20px rgba(0, 170, 255, 0.3);
        transition: all 0.35s;
    }

    .btn-futuristic:hover {
        transform: translateY(-3px);
        box-shadow: 0 12px 35px rgba(0, 170, 255, 0.45);
    }
</style>

<!-- Floating Action Button -->
<button class="fab" type="button" data-bs-toggle="collapse" data-bs-target="#createTaskForm">
    <i class="fas fa-plus"></i>
</button>

<!-- Status Changer Overlay -->
<div id="statusOverlay" onclick="if(event.target === this) closeStatusChanger()">
    <div class="status-changer">
        <h4 class="mb-4">Update Task Status</h4>
        <div class="d-flex justify-content-center align-items-center mb-4">
            <button class="arrow-btn" onclick="changeStatus(-1)"><i class="fas fa-arrow-left"></i></button>
            <div id="currentStatusDisplay" class="status-display">In Progress</div>
            <button class="arrow-btn" onclick="changeStatus(1)"><i class="fas fa-arrow-right"></i></button>
        </div>
        <div class="mt-5">
            <button class="action-btn btn-update" onclick="updateStatus()">Update</button>
            <button class="action-btn btn-cancel" onclick="closeStatusChanger()">Cancel</button>
        </div>
    </div>
</div>

<div class="dashboard-wrapper">

    <!-- Create Task Form -->
    <div class="collapse mb-5" id="createTaskForm">
        <div class="create-section">
            <h4 class="mb-4"><i class="fas fa-rocket me-2"></i>New Task</h4>

            <form asp-action="Create" asp-controller="Tasks" method="post">
                @Html.AntiForgeryToken()

                <div class="row g-3">
                    <div class="col-md-6">
                        <label asp-for="First().Department" class="form-label">Department</label>
                        <input name="Department" class="form-control" required />
                    </div>

                    <div class="col-md-6">
                        <label asp-for="First().MemberId" class="form-label">Assigned Member</label>
                        <input name="MemberId" class="form-control" required placeholder="username or email" />
                    </div>

                    <div class="col-12">
                        <label asp-for="First().Description" class="form-label">Description</label>
                        <textarea name="Description" class="form-control" rows="3" required></textarea>
                    </div>

                    <div class="col-md-6">
                        <label asp-for="First().Deadline" class="form-label">Deadline</label>
                        <input name="Deadline" type="date" class="form-control" required />
                    </div>

                    <div class="col-md-6">
                        <label class="form-label">Initial Status</label>
                        <select name="status" class="form-select">
                            <option value="ToDo">To Do</option>
                            <option value="InProgress">In Progress</option>
                            <option value="Done">Done</option>
                            <option value="Blocked">Blocked</option>
                        </select>
                    </div>
                </div>

                <div class="mt-4">
                    <button type="submit" class="btn btn-futuristic">
                        <i class="fas fa-paper-plane me-2"></i>Create Task
                    </button>
                </div>
            </form>
        </div>
    </div>

    <!-- Tasks Grid -->
    <div class="row g-3">
        @if (!Model.Any())
        {
            <div class="col-12 text-center py-5">
                <i class="fas fa-tasks fa-3x mb-3 opacity-50"></i>
                <h5 class="text-white-50">No tasks yet. Create your first one!</h5>
            </div>
        }
        else
        {
            @foreach (var task in Model)
            {
                <div class="col-lg-6 col-xl-4">
                    <div class="task-card">
                        <div class="task-header">
                            <h5 class="task-title">Task #@task.Id</h5>
                            <span class="status-badge status-@task.Status?.ToLower().Replace(" ", "")"
                                  data-status="@task.Status"
                                  data-task-id="@task.Id"
                                  onclick="openStatusChanger(this)">
                                @(task.Status ?? "ToDo")
                            </span>
                        </div>
                        <div class="task-body">
                            <p class="mb-3">@task.Description</p>

                            <div class="task-meta">
                                <div><i class="fas fa-calendar-alt"></i>Created: @task.CreationDate.ToString("dd MMM yyyy")</div>
                                <div><i class="fas fa-clock"></i>Deadline: @task.Deadline</div>
                            </div>

                            <div class="task-meta">
                                <div><i class="fas fa-building"></i>@task.Department</div>
                                <div><i class="fas fa-user"></i>@task.MemberId</div>
                            </div>
                        </div>
                    </div>
                </div>
            }
        }
    </div>
</div>

@section Scripts {
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"></script>

    <script>
        const statusOrder = ["ToDo", "InProgress", "Done"];
        let currentTaskElement = null;
        let currentStatusIndex = 0;

        function openStatusChanger(el) {
            currentTaskElement = el;
            const status = el.getAttribute("data-status");

            currentStatusIndex = statusOrder.indexOf(status);
            if (currentStatusIndex === -1) currentStatusIndex = 0;

            document.getElementById("currentStatusDisplay").textContent = status;
            document.getElementById("statusOverlay").style.display = "flex";
        }

        function closeStatusChanger() {
            document.getElementById("statusOverlay").style.display = "none";
            currentTaskElement = null;
        }

        function changeStatus(direction) {
            currentStatusIndex = (currentStatusIndex + direction + statusOrder.length) % statusOrder.length;
            const newStatus = statusOrder[currentStatusIndex];
            document.getElementById("currentStatusDisplay").textContent = newStatus;
        }

        function updateStatus() {
            if (!currentTaskElement) return;

            const newStatus = document.getElementById("currentStatusDisplay").textContent;
            const taskId = currentTaskElement.getAttribute("data-task-id");
            const badge = currentTaskElement;

            // Update UI immediately
            badge.textContent = newStatus;
            badge.setAttribute("data-status", newStatus);
            badge.className = badge.className.replace(/status-\w+/, `status-${newStatus.toLowerCase().replace(" ", "")}`);

            // In real app → send AJAX request
            fetch(`/Tasks/UpdateStatus/${taskId}`, {
                method: 'POST',
                headers: {
                    'Content-Type': 'application/json',
                    'RequestVerificationToken': document.querySelector('input[name="__RequestVerificationToken"]').value
                },
                body: JSON.stringify({ status: newStatus })
            })
            .then(response => {
                if (!response.ok) {
                    console.error("Status update failed");
                    // You can revert UI here if needed
                }
            })
            .catch(err => console.error(err));

            closeStatusChanger();
        }

        document.addEventListener("keydown", (e) => {
            if (e.key === "Escape") closeStatusChanger();
        });
    </script>
}