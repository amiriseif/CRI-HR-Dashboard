<!DOCTYPE html>
<html lang="en" data-bs-theme="dark">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - HRDashboard</title>
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.5.0/css/all.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/HRDashboard.styles.css" asp-append-version="true" />

    <style>
        :root {
            --primary: #0d1b4c;
            --primary-dark: #081336;
            --accent: #00aaff;
            --accent-glow: #00ddff;
            --text-light: #d0e0ff;
            --card-bg: rgba(18, 26, 66, 0.55);
            --border-glow: rgba(0, 170, 255, 0.3);
        }

        body {
            background: linear-gradient(135deg, var(--primary-dark) 0%, var(--primary) 50%, #1a2a6c 100%);
            color: var(--text-light);
            min-height: 100vh;
            margin: 0;
            font-family: 'Segoe UI', system-ui, sans-serif;
        }

        /* ── Futuristic Navbar ── */
        .futuristic-navbar {
            position: fixed;
            top: 0;
            left: 0;
            right: 0;
            z-index: 1030;
            background: rgba(13, 27, 76, 0.45);
            backdrop-filter: blur(12px);
            -webkit-backdrop-filter: blur(12px);
            border-bottom: 1px solid var(--border-glow);
            box-shadow: 0 8px 32px rgba(0, 0, 0, 0.4);
        }

        .navbar-container {
            max-width: 1400px;
            margin: 0 auto;
            padding: 0 1.5rem;
            display: flex;
            align-items: center;
            justify-content: space-between;
            height: 76px;
        }

        .navbar-brand-custom {
            display: flex;
            align-items: center;
            text-decoration: none;
            gap: 1rem;
        }

        .navbar-logo {
            height: 52px;
            filter: drop-shadow(0 4px 10px rgba(0, 170, 255, 0.35));
        }

        .navbar-title {
            margin: 0;
            font-size: 1.4rem;
            font-weight: 600;
            color: white;
            text-shadow: 0 0 12px rgba(0, 170, 255, 0.4);
        }

        .navbar-subtitle {
            margin: 0;
            font-size: 0.82rem;
            color: rgba(208, 224, 255, 0.7);
        }

        .nav-links {
            display: flex;
            align-items: center;
            gap: 1.8rem;
        }

        .nav-link-custom {
            color: var(--text-light);
            text-decoration: none;
            font-weight: 500;
            padding: 0.5rem 0.8rem;
            border-radius: 0.6rem;
            transition: all 0.3s;
            display: flex;
            align-items: center;
            gap: 0.5rem;
        }

        .nav-link-custom:hover,
        .nav-link-custom.active {
            background: rgba(0, 170, 255, 0.18);
            color: var(--accent-glow);
            box-shadow: 0 0 16px rgba(0, 170, 255, 0.3);
            transform: translateY(-1px);
        }

        .navbar-user {
            display: flex;
            align-items: center;
            gap: 1.2rem;
        }

        .user-profile {
            display: flex;
            align-items: center;
            gap: 0.9rem;
        }

        .user-avatar,
        .user-avatar-placeholder {
            width: 44px;
            height: 44px;
            border-radius: 50%;
            object-fit: cover;
            border: 2px solid rgba(0, 170, 255, 0.4);
            background: rgba(255,255,255,0.08);
            display: flex;
            align-items: center;
            justify-content: center;
            color: var(--accent);
            font-size: 1.3rem;
        }

        .user-info {
            display: flex;
            flex-direction: column;
        }

        .user-name {
            font-weight: 600;
            font-size: 0.95rem;
        }

        .user-role {
            font-size: 0.78rem;
            color: rgba(208, 224, 255, 0.65);
        }

        .navbar-logout {
            color: #ff6b6b;
            font-size: 1.3rem;
            transition: all 0.3s;
        }

        .navbar-logout:hover {
            color: #ff4757;
            transform: scale(1.15);
        }

        .navbar-toggle {
            display: none;
            background: none;
            border: none;
            color: white;
            font-size: 1.6rem;
            cursor: pointer;
        }

        @@media (max-width: 992px) {
            .navbar-toggle { display: block; }
            .nav-links {
                display: none;
                flex-direction: column;
                position: absolute;
                top: 76px;
                left: 0;
                right: 0;
                background: rgba(13, 27, 76, 0.92);
                backdrop-filter: blur(10px);
                padding: 1.5rem;
                border-bottom: 1px solid var(--border-glow);
            }
            .nav-links.show { display: flex; }
            .navbar-user { margin-top: 1rem; justify-content: center; }
        }

        main {
            padding-top: 96px; /* ← navbar height + some breathing room */
            min-height: calc(100vh - 140px);
        }
    </style>
    @await RenderSectionAsync("Styles", required: false)
</head>
<body>

    <nav class="futuristic-navbar">
        <div class="navbar-container">
            <!-- Brand -->
            <a href="/" class="navbar-brand-custom">
                <img src="/images/robotique-club-isamm-logo.png" alt="Robotique Club ISAMM" class="navbar-logo" />
                <div>
                    <h1 class="navbar-title">HR Dashboard</h1>
                    <p class="navbar-subtitle">Robotique Club ISAMM</p>
                </div>
            </a>

            <!-- Toggle for mobile -->
            <button class="navbar-toggle" id="navbarToggle">
                <i class="fas fa-bars"></i>
            </button>

            <!-- Links + User -->
            <div class="nav-links" id="navbarMenu">
                <a href="@Url.Action("Index", "Home")" class="nav-link-custom @(ViewContext.RouteData.Values["controller"]?.ToString() == "Home" ? "active" : "")">
                    <i class="fas fa-home"></i> Home
                </a>
                <a href="@Url.Action("Index", "Members")" class="nav-link-custom @(ViewContext.RouteData.Values["controller"]?.ToString() == "Members" ? "active" : "")">
                    <i class="fas fa-users"></i> Members
                </a>
                <a href="@Url.Action("Index", "Workshops")" class="nav-link-custom @(ViewContext.RouteData.Values["controller"]?.ToString() == "Workshops" ? "active" : "")">
                    <i class="fas fa-chalkboard-teacher"></i> Workshops
                </a>
                <a href="@Url.Action("Index", "Tasks")" class="nav-link-custom @(ViewContext.RouteData.Values["controller"]?.ToString() == "Tasks" ? "active" : "")">
                    <i class="fas fa-tasks"></i> Task Track
                </a>

                <div class="navbar-user ms-auto">
                    <div class="user-profile">
                        @if (User.Identity?.IsAuthenticated == true)
                        {
                            var profilePic = User.FindFirst("ProfilePicture")?.Value;
                            if (!string.IsNullOrEmpty(profilePic))
                            {
                                <img src="@profilePic" alt="Profile" class="user-avatar" />
                            }
                            else
                            {
                                <div class="user-avatar-placeholder"><i class="fas fa-user"></i></div>
                            }
                            <div class="user-info">
                                <span class="user-name">@(ViewBag.UserName ?? User.Identity.Name)</span>
                                <span class="user-role">@(ViewBag.UserRole ?? "Member")</span>
                            </div>
                        }
                        else
                        {
                            <div class="user-avatar-placeholder"><i class="fas fa-user"></i></div>
                            <div class="user-info">
                                <span class="user-name">Guest</span>
                                <span class="user-role">Visitor</span>
                            </div>
                        }
                    </div>

                    @if (User.Identity?.IsAuthenticated == true)
                    {
                        <a href="@Url.Action("Index", "Logout")" class="navbar-logout" title="Logout">
                            <i class="fas fa-sign-out-alt"></i>
                        </a>
                    }
                </div>
            </div>
        </div>
    </nav>

    <main role="main">
        @RenderBody()
    </main>

    <footer class="border-top footer text-muted mt-5 py-4">
        <div class="container text-center">
            &copy; 2026 - HRDashboard - Robotique Club ISAMM
            <span class="mx-2">•</span>
            <a asp-area="" asp-controller="Home" asp-action="Privacy">Privacy</a>
        </div>
    </footer>

    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>

    <script>
        // Mobile menu toggle
        document.getElementById('navbarToggle')?.addEventListener('click', () => {
            document.getElementById('navbarMenu')?.classList.toggle('show');
        });
    </script>

    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>